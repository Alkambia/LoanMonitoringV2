<controls:MetroWindow x:Class="Alkambia.WPF.LoanMonitoring.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:quick="clr-namespace:Alkambia.WPF.LoanMonitoring.Views.QuickLinks"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        GlowBrush="{DynamicResource AccentColorBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Gensan G&amp;F Lending, Inc." Height="800" Width="1100" WindowState="Maximized">

    <controls:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Shadows.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:MetroWindow.Resources>
    <materialDesign:DialogHost Identifier="RootDialog" SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">
        <materialDesign:DrawerHost IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
            <materialDesign:DrawerHost.LeftDrawerContent>
                <DockPanel MinWidth="250">
                    <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" 
                                    DockPanel.Dock="Top"
                                    HorizontalAlignment="Right" Margin="5"
                                    IsChecked="{Binding ElementName=MenuToggleButton, Path=IsChecked, Mode=TwoWay}" />
                    <ListBox x:Name="DemoItemsListBox" SelectedIndex="0" >
                        <ListBoxItem x:Name="LoanApplication" >
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_edit_add}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Loan Application" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:Name="LoanApproval">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_thumb_up_add}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Loan Approvals" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:Name="DeclinedLoan">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_thumb_up_add}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Declined Loans" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="Releasing">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_reply_people}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Releasing" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:Name="ReleasedLoans">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_repeat}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Released Loans" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:Name="Payment">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_paypal}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Payments" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:Name="CashDisbursement">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_calendar_dollar}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Cash Disbursement" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="Expense">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_calendar_dollar}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Expenses" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:Name="Account" >
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_user_add}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Accounts" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="Investment" >
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_billing}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Investments" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:Name="Status" >
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_people_status}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Status" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:Name="PaymentCharge" >
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_add_multiple}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Late Payment Charge" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                        <!--<ListBoxItem x:Name="FixedExpense" >
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_folder_lock}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Fixed Expense" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>-->

                        <ListBoxItem x:Name="Kind">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_box_unfolded}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Kind" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="Miscellaneous">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_calculator}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Miscellaneous" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="Relation">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_fingerprint}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Relation" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:Name="CreditTerm">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_card_5}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Credit Term" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="Import">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_social_dropbox_upload}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Import Excel" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:Name="Report">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" HorizontalAlignment="Left" Height="50" Width="50">
                                    <Rectangle Width="20" Height="20" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_office_excel}" />
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                                <TextBlock Text="Reports" FontSize="16" Margin="10 17 0 0" />
                            </StackPanel>
                        </ListBoxItem>

                    </ListBox>
                </DockPanel>
            </materialDesign:DrawerHost.LeftDrawerContent>
            <DockPanel>
                <materialDesign:ColorZone Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                            Mode="PrimaryMid" DockPanel.Dock="Top">
                    <DockPanel>
                        <ToggleButton Style="{StaticResource MaterialDesignHamburgerToggleButton}" IsChecked="False"
                                        x:Name="MenuToggleButton"/>
                        <materialDesign:PopupBox DockPanel.Dock="Right" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                            <StackPanel>
                                <Button x:Name="dbconfigBtn" Content="Database Configuration" />
                                <Separator/>
                                <Button x:Name="changeuserbtn" Content="Change User" />
                                <Separator/>
                                <Button x:Name="template_btn" Content="Template Folder" />
                                <Button Content="Help" />
                            </StackPanel>
                        </materialDesign:PopupBox>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22">Gensan G&amp;F Lending, Inc</TextBlock>
                    </DockPanel>
                </materialDesign:ColorZone>
                <!--<Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    
                </Grid>-->

                <StackPanel Margin="15" Orientation="Horizontal">
                    <Border Margin="5" CornerRadius="6"
                BorderBrush="Gray"
                BorderThickness="1">
                        <StackPanel Margin="10">
                            <TextBlock  Margin="5" x:Name="welcomeTB" TextWrapping="Wrap" Text="Welcome DisplayName" FontSize="25" Background="#FFDBCBF7" VerticalAlignment="Top"/>
                            <quick:QuickView x:Name="quickLink_user_ctrl"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
                <GroupBox Header="Sofware Information" Margin="10" >
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <Image Source="logo.PNG" Margin="10" Opacity="0.7" MaxWidth="400" />
                            <TextBlock FontSize="11" TextAlignment="Justify" TextWrapping="Wrap" Text="Alk SDS hereby grants you a personal, non-transferable, non-exclusive licence to use the Loan Monitoring software on your devices in accordance with the terms of this EULA agreement.
