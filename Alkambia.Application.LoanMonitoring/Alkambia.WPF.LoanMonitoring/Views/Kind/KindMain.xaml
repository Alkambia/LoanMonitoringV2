<controls:MetroWindow x:Class="Alkambia.WPF.LoanMonitoring.Views.Kind.KindMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        GlowBrush="{DynamicResource AccentColorBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}" 
        mc:Ignorable="d"
        Title="Kind" ResizeMode="NoResize" 
                      WindowStartupLocation="CenterScreen" Height="457" Width="570">
<StackPanel>
    <StackPanel Background="#FFEEE3E3" Orientation="Horizontal">
        <StackPanel HorizontalAlignment="Left">
            <TextBox x:Name="displayNameTB" Margin="5" materialDesign:HintAssist.Hint="Display Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="210" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button x:Name="search_buton" Content="search" Margin="5" Width="100"  />
            <Button x:Name="addbtn" Content="add" Margin="5" Width="100"  />
            <Button x:Name="editbtn" Content="edit" Margin="5" Width="100"  />
        </StackPanel>
    </StackPanel>

    <StackPanel>
        <DataGrid x:Name="KindDG" Height="370" ColumnWidth="*" IsReadOnly="True" CanUserAddRows="False"  AutoGenerateColumns="False" ClipboardCopyMode="IncludeHeader" EnableRowVirtualization="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Name}" Header="Name" />
                    <DataGridTextColumn Binding="{Binding Path=DisplayName}" Header="Display Name" />
                </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</StackPanel>
</controls:MetroWindow>