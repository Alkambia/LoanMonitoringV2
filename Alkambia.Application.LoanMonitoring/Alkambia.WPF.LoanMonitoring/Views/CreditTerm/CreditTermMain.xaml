<controls:MetroWindow x:Class="Alkambia.WPF.LoanMonitoring.Views.CreditTerm.CreditTermMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        GlowBrush="{DynamicResource AccentColorBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}" 
        mc:Ignorable="d"
        Title="CreditTerm" ResizeMode="NoResize" 
                      WindowStartupLocation="CenterScreen" Width="446.635" Height="360">
    <StackPanel>
        <StackPanel Margin="10">
            <StackPanel>
                <TextBox Text="{Binding Term}" Margin="5" materialDesign:HintAssist.Hint="Term in months" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="monthlyInterestTB" Text="{Binding MonthlyInterest}" Margin="5" materialDesign:HintAssist.Hint="Interest Per Month (Percentage)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" />
                <TextBox IsReadOnly="True" x:Name="totalInterestTB" Text="{Binding TotalInterest}" Margin="5" materialDesign:HintAssist.Hint="Total Interest (Percentage)" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding Name}" Margin="5" materialDesign:HintAssist.Hint="Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" />
                <TextBox Text="{Binding DisplayName}" Margin="5" materialDesign:HintAssist.Hint="Display Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" />
            </StackPanel>
            <StackPanel >
                <TextBox Text="{Binding Description}" Margin="5" Height="100" TextWrapping="Wrap" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"  materialDesign:HintAssist.Hint="Description"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            </StackPanel>
        </StackPanel>
        <StackPanel Background="#FFEEE3E3">
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Button x:Name="CancelBtn" Content="cancel" Margin="5" Width="150" />
                <Button x:Name="SaveBtn" Content="save" Margin="5" Width="150" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</controls:MetroWindow>
