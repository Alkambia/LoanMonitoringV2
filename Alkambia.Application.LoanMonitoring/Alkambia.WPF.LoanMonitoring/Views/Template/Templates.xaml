<controls:MetroWindow x:Class="Alkambia.WPF.LoanMonitoring.Views.Template.Templates"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alkambia.WPF.LoanMonitoring.Views.Template"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        GlowBrush="{DynamicResource AccentColorBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}" 
        mc:Ignorable="d"
        Title="Templates" ResizeMode="NoResize" 
                      WindowStartupLocation="CenterScreen" Height="457" Width="550">
    <StackPanel>
        <StackPanel Background="#FFEEE3E3" Orientation="Horizontal">
            <StackPanel HorizontalAlignment="Left">
                <TextBox Margin="5" materialDesign:HintAssist.Hint="Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="300" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Button x:Name="search_buton" Content="search" Margin="5" Width="100"  />
                <Button x:Name="view_button" Content="view" Margin="5" Width="100"  />
            </StackPanel>
        </StackPanel>

        <StackPanel>
            <DataGrid Height="370" ColumnWidth="*" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" />
                    <DataGridTextColumn Header="Display Name" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </StackPanel>
</controls:MetroWindow>
