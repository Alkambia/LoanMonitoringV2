<controls:MetroWindow x:Class="Alkambia.WPF.LoanMonitoring.Views.LoanApplication.CreditorForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        GlowBrush="{DynamicResource AccentColorBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}" 
        mc:Ignorable="d"
        Title="Credit Reference" ResizeMode="NoResize" 
                      WindowStartupLocation="CenterScreen" Width="446.635" Height="380">
    <StackPanel>
        <StackPanel Margin="10">
            <StackPanel>
                <TextBox Text="{Binding Creditor}" Margin="5" materialDesign:HintAssist.Hint="Creditor" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            </StackPanel>
            <StackPanel >
                <TextBox Text="{Binding Address}" Margin="5" Height="100" TextWrapping="Wrap" VerticalContentAlignment="Top" VerticalScrollBarVisibility="Auto"  materialDesign:HintAssist.Hint="Address"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="{Binding AmountLoan}" Margin="5" materialDesign:HintAssist.Hint="Amount Loan" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" />
                <!--<TextBox Margin="5" materialDesign:HintAssist.Hint="Granted" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" />-->
                <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}" Width="200" Margin="5 16 5 5" SelectedIndex="{Binding Granted}"  materialDesign:HintAssist.Hint="Granted" materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}" >
                    <ComboBoxItem>No</ComboBoxItem>
                    <ComboBoxItem>Yes</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel >
                <ComboBox x:Name="CreditRefStatusCB" SelectedItem="{Binding Status}" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="5 16 5 5"  materialDesign:HintAssist.Hint="Status" materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Background="#FFEEE3E3">
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Button x:Name="CancelBtn" Content="cancel" Margin="5" Width="150" />
                <Button x:Name="AddBTn" Content="add" Margin="5" Width="150" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</controls:MetroWindow>
