<controls:MetroWindow x:Class="Alkambia.WPF.LoanMonitoring.Views.LoanApplication.LoanApplicationMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        GlowBrush="{DynamicResource AccentColorBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}" 
        xmlns:application="clr-namespace:Alkambia.WPF.LoanMonitoring.Views.LoanApplication"
        mc:Ignorable="d"
        Title="Information" ResizeMode="NoResize" 
                      WindowStartupLocation="CenterScreen" Height="700" Width="650">
    <StackPanel>
        <ScrollViewer Margin="10" Height="600">
            <StackPanel>
                <application:PersonalData x:Name="PersonalData0" />
                <application:Employer x:Name="PersonalData1" Visibility="Collapsed"/>
                <application:SourceOfIncome x:Name="PersonalData2" Visibility="Collapsed" />
                <application:Creditor x:Name="PersonalData3" Visibility="Collapsed" />
                <application:PersonalRefference x:Name="PersonalData4" Visibility="Collapsed" />
                <application:Property x:Name="PersonalData5" Visibility="Collapsed" />
                
            </StackPanel>
        </ScrollViewer>
        <StackPanel Background="#FFEEE3E3">
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Button x:Name="previous_buton" Content="previous" Margin="5" Width="150" Click="Prev_Click" Visibility="Hidden" />
                <Button x:Name="next_button" Content="next" Margin="5" Width="150" Click="Next_Click" />
                <Button x:Name="submit_button" Content="submit" Margin="5" Width="150" Visibility="Collapsed" />
            </StackPanel>
        </StackPanel>

    </StackPanel>
</controls:MetroWindow>
