<controls:MetroWindow x:Class="Alkambia.WPF.LoanMonitoring.Views.CashDisbursement.DisbursementSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        GlowBrush="{DynamicResource AccentColorBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}" 
        mc:Ignorable="d"
        Title="Search Disbursement" ResizeMode="NoResize" 
                      WindowStartupLocation="CenterScreen" Height="457" Width="725">
    <StackPanel>
        <StackPanel Background="#FFEEE3E3" Orientation="Horizontal">
            <StackPanel HorizontalAlignment="Left">
                <TextBox x:Name="inv_number_tb" Margin="5" materialDesign:HintAssist.Hint="Invoice Number" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="200" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
                <Button x:Name="search_buton" Content="search" Margin="5" Width="115"  />
                <Button x:Name="new_button" Content="new" Margin="5" Width="115"  />
                <Button x:Name="edit_button" Content="edit" Margin="5" Width="115"  />
                <Button x:Name="delete_button" Content="delete" Margin="5" Width="115"  />
            </StackPanel>
        </StackPanel>

        <StackPanel>
            <DataGrid x:Name="Data_DG" Height="370" ColumnWidth="*" IsReadOnly="True" CanUserAddRows="False"  AutoGenerateColumns="False" ClipboardCopyMode="IncludeHeader" EnableRowVirtualization="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=InvoiceNumber}" Header="Invoice" />
                    <DataGridTextColumn Binding="{Binding Path=DisbursementDate}" Header="Disbursement Date" />
                    <DataGridTextColumn Binding="{Binding Path=Cash}" Header="Cash" />
                    <DataGridTextColumn Binding="{Binding Path=Particular}" Header="Particular" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </StackPanel>
</controls:MetroWindow>
